@model leave_management.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.LeaveType.Name Allocation for @Model.Employee.LastName, @Model.Employee.FirstName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label">Number of Days</label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a asp-action="ListEmployees" class="btn btn-info">
                    <i class="fa fa-step-backward" aria-hidden="true"></i>
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>