@using Microsoft.AspNetCore.Identity
@using leave_management.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"] - EduKids</title> 

    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
                <span class="brand-text font-weight-light">EduKids System</span>
            </a>
            <div class="sidebar">
                <partial name="_LoginPartial" />
                <hr />
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Teacher"))
                        {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="LeaveRequest" asp-action="Create" class="nav-link">
                            <i class="nav-icon fas fa-pen-alt"></i>
                            <p>
                                Apply for Leave
                            </p>
                        </a>
                    </li>
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="LeaveRequest" asp-action="MyLeave" class="nav-link">
                                            <i class="nav-icon fas fa-book-open"></i>
                                            <p>
                                                My Leave Application
                                            </p>
                                        </a>
                                    </li>
                                                    <li class="nav-item">
                                                        <a asp-controller="Student" asp-action="Index" class="nav-link">
                                                            <i class="fas fa-list nav-icon"></i>
                                                            <p>Student List</p>
                                                        </a>
                                                    </li>
}
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                        {
                    <li class="nav-item has-treeview menu-open">
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-chalkboard-teacher"></i>
                            <p>
                                Manage
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="LeaveTypes" asp-action="Index" class="nav-link">
                                    <i class="fas fa-list nav-icon"></i>
                                    <p>Leave Types</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="LeaveAllocation" asp-action="Index" class="nav-link">
                                    <i class="fa fa-user-plus nav-icon"></i>
                                    <p>Leave Allocations</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="LeaveRequest" asp-action="Index" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>Leave Applications</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="LeaveAllocation" asp-action="ListEmployees" class="nav-link">
                                    <i class="fas fa-cogs nav-icon"></i>
                                    <p>Users List</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Student" asp-action="Index" class="nav-link">
                                    <i class="fas fa-list nav-icon"></i>
                                    <p>Student List</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                                                    <li class="nav-item">
                                                        <a asp-controller="Admin" asp-action="Create" class="nav-link">
                                                            <i class="fas fa-users nav-icon"></i>
                                                            <p>Roles</p>
                                                        </a>
                                                    </li>
}
                        @if (SignInManager.IsSignedIn(User))
                        {
                    <li class="nav-item">
                        <a asp-controller="HomeWork" asp-action="Index" class="nav-link">
                            <i class="fas fa-tasks nav-icon"></i>
                            <p>Homeworks</p> 
                        </a>
                    </li>
}
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                EDUKIDS
            </div>
            <strong>Copyright &copy; 2021-2022</strong> All rights reserved.
        </footer>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>